# pyenv
export PYENV_ROOT=${HOME}/.pyenv
export PATH=${PYENV_ROOT}/bin:${PATH}
eval "$(pyenv init --path)"

# direnv
export EDITOR=nvim
eval "$(direnv hook bash)"
show_virtual_env() {
    if [ -n "$VIRTUAL_ENV" ]; then
        echo "($(basename $VIRTUAL_ENV))"
    fi
}
export -f show_virtual_env
PS1='$(show_virtual_env)'$PS1
