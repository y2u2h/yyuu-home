[core]
    editor = nvim
[diff]
    tool = nvimdiff
[merge]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -R -d -c \"wincmd l\" -d \"$LOCAL\" \"$REMOTE\""
[mergetool "nvimdiff"]
    cmd = "nvim -d -c \"4wincmd w | wincmd J\" \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\""
[difftool]
    prompt = false
    trustExitCode = true
